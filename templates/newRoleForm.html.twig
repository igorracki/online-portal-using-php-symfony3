{% extends '_base.html.twig' %}

{% block pageTitle %} New Role {% endblock %}

{% block nav %}
    {% embed "navBar.html.twig" %}
    {% endembed %}
{% endblock %}

{% block main %}
    <h3 class="info"> Create a New Role </h3>

    {% if message is defined %}
        <p class="error"> {{ message }}</p>
    {% endif %}

    <form action="/newRole" method="post">
        <table class="noBorder" align="center">
            <tr>
                <th><label for="roleName"> Role Name: </label></th>
                <td>
                    <input type="text" name="roleName" id="roleName" required>
                    <input type="hidden" name="projectID" value="{{ projectID }}">
                </td>
            </tr>
            <tr>
                <td colspan="2" align="center"><input type="submit" name="submit" value="Add Role"></td>
            </tr>
        </table>
    </form>
{% endblock %}
